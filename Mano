import java.util.Vector;

public class Mano
{
   //Se trata de un vector y no de un array porque el numero de cartas en la mano es variable
   private Vector mano;
   //Constructor
   public Mano(){
       mano=new Vector();
    }
   //AÃ±ade una carta a su mano
   public void pideCarta(Baraja b){
       if(b!=null)
       mano.addElemento(b);
    }
   //Cuenta las cartas que tiene la mano
   public int contar(){
       return mano.size();
    }
   //Nos dice la carta que tiene en la posicion pos
   public Carta obtenerCarta(int pos){
       if(pos>=0 && pos<mano.size())
        return(Carta)mano.elementAt(pos);
       else
        return null;
    }
   //Cuenta los puntos que suman las cartas de nuestra mano
   public int calcularValor(){
       int val;
       boolean as;
       int cartas;
       val=0;
       as=false;
       cartas=contar();
       for(int i=0;i<cartas;i++){
           Carta carta;
           int cartaVal;
           carta=obtenerCarta(i);
           cartaVal=carta.getValor();
           if(cartaVal>10){
               cartaVal=10;
            }
           if(cartaVal==1){
               as=true;
            }
            val=val+cartaVal;
        }
       return val;
    }
   public void reparte(Baraja b){
       baraja[0]=new BarajaFrancesa();
       baraja[1]=new BarajaFrancesa();
       baraja[0].mezclar();
       baraja[1].mezclar();
       int indice=(int)Math.random()%(1);
       cartasJugador[0]=baraja[indice].getCartaFrancesa();
       indice=(int)Math.random()%(1);
       cartasJugador[1]=baraja[indice].getCartaFrancesa();
    }
   //Nos dice si el valor de la mano supera el 21 
   public boolean sePasa(){
       int val;
       boolean sepasa;
       val=calcularValor();
       if(val>21)
        sepasa=true;
       else
        sepasa=false;
       return sepasa;
    }     
}
