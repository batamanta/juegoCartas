public class Mano{
   private Carta[] mano;
   public Mano(){
        mano=new Carta[5];
    }
   public void pideCarta(Carta carta){
       boolean recibido=false;
       for(int i=0;i<5;i++){
            if (mano[i]==null){
               mano[i]=carta;
            }
            recibido =true;
            break;
        }
       if(!recibido){
            System.out.println("-- La mano estÃ¡ llena, no puede recibir mÃ¡s cartas --");
       }
    }
   public Carta obtenerCarta(int pos){
       if(pos>=0 && pos<=5){
           return mano[pos];
        }
       return null;
    }
   public int calculaValor(){
       int val;
       val=0;
       for(int i=0;i<5;i++){
           Carta carta=obtenerCarta(i);
           int cartaVal;
           if(carta!=null){
               cartaVal=carta.getValor();
           }
           if(cartaVal==1){
                   cartaVal=11;
           }
           val=val+cartaVal;        
        }  
       return val;
    }
   public void reparte(Baraja baraja){
       baraja[0]=new BarajaFrancesa();
       baraja[1]=new BarajaFrancesa();
       baraja[0].mezclar();
       baraja[1].mezclar();
       int indice=(int)Math.random()%(1);
       cartasJugador[0]=baraja[indice].getCartaFrancesa();
       indice=(int)Math.random()%(1);
       cartasJugador[1]=baraja[indice].getCartaFrancesa();
    }
   //Nos dice si el valor de la mano supera el 21 
   public boolean sePasa(){
       int val;
       boolean sepasa;
       val=calcularValor();
       if(val>21)
        sepasa=true;
       else
        sepasa=false;
       return sepasa;
    }  
}
