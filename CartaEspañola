import java.awt.Toolkit;
import java.awt.Image;

public class CartaEspañola extends Carta{
	private enum Palo{
		ORO,
		BASTOS,
		ESPADAS,
		COPAS
	};
	private Palo palo;
	
	public CartaEspañola(int valor,Palo palo){
		super(valor);
		Image imagen = Toolkit.getDefaultToolkit().getImage("imgCartaEsp/imagendefecto");
		this.palo=palo;
		switch(palo){
		case ORO:
			switch(valor){
			case 1:
				imagen = Toolkit.getDefaultToolkit().getImage("imgCartaEsp/imagenORO01");
				break;
			case 2:
				imagen = Toolkit.getDefaultToolkit().getImage("imgCartaEsp/imagenORO02");
				break;
			case 3:
				imagen = Toolkit.getDefaultToolkit().getImage("imgCartaEsp/imagenORO03");
				break;
			case 4:
				imagen = Toolkit.getDefaultToolkit().getImage("imgCartaEsp/imagenORO04");
				break;
			case 5:
				imagen = Toolkit.getDefaultToolkit().getImage("imgCartaEsp/imagenORO05");
				break;
			case 6:
				imagen = Toolkit.getDefaultToolkit().getImage("imgCartaEsp/imagenORO06");
				break;
			case 7:
				imagen = Toolkit.getDefaultToolkit().getImage("imgCartaEsp/imagenORO07");
				break;
			case 10:
				imagen = Toolkit.getDefaultToolkit().getImage("imgCartaEsp/imagenORO10");
				break;
			case 11:
				imagen = Toolkit.getDefaultToolkit().getImage("imgCartaEsp/imagenORO11");
				break;
			case 12:
				imagen = Toolkit.getDefaultToolkit().getImage("imgCartaEsp/imagen12");
				break;
			}
			break;
		case BASTOS:
			switch(valor){
			case 1:
				imagen = Toolkit.getDefaultToolkit().getImage("imgCartaEsp/imagenBASTOS01");
				break;
			case 2:
				imagen = Toolkit.getDefaultToolkit().getImage("imgCartaEsp/imagenBASTOS02");
				break;
			case 3:
				imagen = Toolkit.getDefaultToolkit().getImage("imgCartaEsp/imagenBASTOS03");
				break;
			case 4:
				imagen = Toolkit.getDefaultToolkit().getImage("imgCartaEsp/imagenBASTOS04");
				break;
			case 5:
				imagen = Toolkit.getDefaultToolkit().getImage("imgCartaEsp/imagenBASTOS05");
				break;
			case 6:
				imagen = Toolkit.getDefaultToolkit().getImage("imgCartaEsp/imagenBASTOS06");
				break;
			case 7:
				imagen = Toolkit.getDefaultToolkit().getImage("imgCartaEsp/imagenBASTOS07");
				break;
			case 10:
				imagen = Toolkit.getDefaultToolkit().getImage("imgCartaEsp/imagenBASTOS10");
				break;
			case 11:
				imagen = Toolkit.getDefaultToolkit().getImage("imgCartaEsp/imagenBASTOS11");
				break;
			case 12:
				imagen = Toolkit.getDefaultToolkit().getImage("imgCartaEsp/imagenBASTOS12");
				break;
			}
			break;
		case ESPADAS:
			switch(valor){
			case 1:
				imagen = Toolkit.getDefaultToolkit().getImage("imgCartaEsp/imagenESPADAS01");
				break;
			case 2:
				imagen = Toolkit.getDefaultToolkit().getImage("imgCartaEsp/imagenESPADAS02");
				break;
			case 3:
				imagen = Toolkit.getDefaultToolkit().getImage("imgCartaEsp/imagenESPADAS03");
				break;
			case 4:
				imagen = Toolkit.getDefaultToolkit().getImage("imgCartaEsp/imagenESPADAS04");
				break;
			case 5:
				imagen = Toolkit.getDefaultToolkit().getImage("imgCartaEsp/imagenESPADAS05");
				break;
			case 6:
				imagen = Toolkit.getDefaultToolkit().getImage("imgCartaEsp/imagenESPADAS06");
				break;
			case 7:
				imagen = Toolkit.getDefaultToolkit().getImage("imgCartaEsp/imagenESPADAS07");
				break;
			case 10:
				imagen = Toolkit.getDefaultToolkit().getImage("imgCartaEsp/imagenESPADAS10");
				break;
			case 11:
				imagen = Toolkit.getDefaultToolkit().getImage("imgCartaEsp/imagenESPADAS11");
				break;
			case 12:
				imagen = Toolkit.getDefaultToolkit().getImage("imgCartaEsp/imagenESPADAS12");
				break;
			}
		case COPAS:
			switch(valor){
			case 1:
				imagen = Toolkit.getDefaultToolkit().getImage("imgCartaEsp/imagenCOPAS01");
				break;
			case 2:
				imagen = Toolkit.getDefaultToolkit().getImage("imgCartaEsp/imagenCOPAS02");
				break;
			case 3:
				imagen = Toolkit.getDefaultToolkit().getImage("imgCartaEsp/imagenCOPAS03");
				break;
			case 4:
				imagen = Toolkit.getDefaultToolkit().getImage("imgCartaEsp/imagenCOPAS04");
				break;
			case 5:
				imagen = Toolkit.getDefaultToolkit().getImage("imgCartaEsp/imagenCOPAS05");
				break;
			case 6:
				imagen = Toolkit.getDefaultToolkit().getImage("imgCartaEsp/imagenCOPAS06");
				break;
			case 7:
				imagen = Toolkit.getDefaultToolkit().getImage("imgCartaEsp/imagenCOPAS07");
				break;
			case 10:
				imagen = Toolkit.getDefaultToolkit().getImage("imgCartaEsp/imagenCOPAS10");
				break;
			case 11:
				imagen = Toolkit.getDefaultToolkit().getImage("imgCartaEsp/imagenCOPAS11");
				break;
			case 12:
				imagen = Toolkit.getDefaultToolkit().getImage("imgCartaEsp/imagenCOPAS12");
				break;
			}
		}
		setImagen(imagen);
	}
	
	
}
