import javax.swing.*;

public class Carta extends JPanel{
	protected int valor;
	private ImageIcon imagen;
	
	public Carta(int valor){
		this.valor=valor;
	}
	
	public final void mostrar(JLabel panel,int x,int y){
		panel.setBounds(x,y,445,446);
		panel.setIcon(imagen);
	}
	
	protected void setImagen(ImageIcon imagen){
		this.imagen=imagen;
	}
}
